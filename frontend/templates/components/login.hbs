<div>
  <div class="container">
    <div class="logIn">
      <p>{{i18n 'Login:'}}</p>
      <form class="formRegister" action="" method="">
          {{i18n 'Alias'}}:<br>
          <input type="text" name="alias" id="login"/><br>
          {{i18n 'Password'}}:<br>
          <input type="password" name="passwd" id="password"><br>
          <input type="submit" id='loginbutton' value="{{i18n 'Accept'}}"/>
          <input type="reset" id='resetbutton' value="{{i18n 'Delete'}}"/>
      </form>
      <a href="#login" id='registrolink'> <input type="button" class="btnSubmit" type="submit" value="{{i18n 'Register'}}" /> </a>
      {{#if registerMode}}
        <h3>{{i18n 'New user in Fasvery'}}</h3>
        <div id="registration-form">
          {{i18n 'Name'}}: <input type="text" id="registroname">
          {{i18n 'Surname'}}: <input type="text" id="registrosurname">
          {{i18n 'Username'}}: <input type="text" id="registrousername">
          {{i18n 'Password'}}: <input type="password" id="registropassword">
          <input type="submit" id='registerbutton' value="{{i18n 'Sing in'}}">
          <input type="reset" id='registerbutton' value="{{i18n 'Delete'}}">
        </div>
      {{/if}}
    </div>
  </div>
</div>
